// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "SOLIDER-REID",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.9-buster",
	"features": {
		"ghcr.io/devcontainers/features/nvidia-cuda:1": {
			"installCudnn": true,
			"cudaVersion": "11.7",
			"cudnnVersion": "8.5.0.96"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"ms-python.python"
			]
		}
	},
	"hostRequirements": {
		"gpu": true
	},
	"runArgs": [
		"--gpus=all",
		"--shm-size=2g"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y libgl1 && pip install --upgrade pip && pip install -e .[dev] --extra-index-url https://download.pytorch.org/whl/cu117"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
